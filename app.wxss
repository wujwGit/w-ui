.line-1px-e5-top{
   position: relative;
}
.line-1px-e5-top::after {
  content: "";
  pointer-events: none; /* 防止点击触发 */
  box-sizing: border-box;
  position: absolute;
  width: 200%;
  height: 200%;
  left: 0;
  top: 0;
  -webkit-transform: scale(0.5);
  -webkit-transform-origin: 0 0;
  transform: scale(0.5);
  transform-origin: 0 0;
  border-top:1px solid #e5e5e5;
  margin-left: 20rpx;
}