.wui-content-keys{
  padding: 25rpx 30rpx;
  color:#636463;
}
.wui-content-keys .wui-keys-title-bar{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.wui-content-keys .wui-keys-title-bar .wui-title-text{
  font-weight: bold;
  font-size: 28rpx;
  color: #333;
}
.wui-content-keys .wui-keys-title-bar .wui-delete{
  font-size: 28rpx;
  color: #999;
}
.wui-content-keys .wui-content-key{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
}
.wui-content-keys .wui-content-key .wui-key{
  height: 45rpx;
  margin: 10rpx;
  padding: 10rpx 30rpx;
  border-radius: 50rpx;
  background-color: #f4f4f4;
  color: #666;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}