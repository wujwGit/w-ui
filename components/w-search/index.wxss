
.wui-content-search{
  position: sticky;
  z-index: 1100;
  top: 0;
  background-color: #fff;
}
.wui-content-search .wui-content-header{
  display: flex;
  align-items: center;

}
.wui-content-search .wui-content-header .wui-header-back-icon{
  height: 60rpx;
  width: 60rpx;
  color: #000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wui-content-search .wui-content-header .wui-header-input{
  position: relative;
  background-color: #f6f6f6;
  border-radius: 100rpx;
  padding-left: 76rpx;
  padding-right: 70rpx;
  height: 60rpx;
  flex: 1;
}
.wui-content-search .wui-content-header .wui-header-input icon{
  position: absolute; 
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
}
.wui-content-search .wui-content-header .wui-header-input .wui-search-input{
  font-size: 13px;
  height: 60rpx;
}
.wui-content-search .wui-content-header .wui-header-input .wui-search-input .wui-clear{
  position: absolute; 
  right: 0;
  top: 0;
  font-size: 25rpx;
  height: 100%;
  width: 70rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.wui-content-list{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 9999;
  background-color: #fff;
}
