 .shield-layer{
  position: fixed;
	top: 0;
	right: 0;
	bottom: 0;
	left: 0;
  z-index: 9998;
  pointer-events: auto;
  background-color: #4445;
}
.cu-load.load-modal {
	position: fixed;
	top: 0;
	right: 0;
	left: 0;
  bottom: 0;
	margin: auto;
	width: 100rpx;
	height: 100rpx;
	background-color: #f8f8f8;
	border-radius: 10rpx;
	display: flex;
	align-items: center;
	flex-direction: column;
	justify-content: center;
	font-size: 28rpx;
	z-index: 9999;
	line-height: 2.4em;
  pointer-events:none;

}

.cu-load.load-modal::after {
	content: "";
	position: absolute;
	border-radius: 50%;
	width: 25px;
	height: 25px;
	font-size: 10px;
	border-top: 2px solid rgba(0, 0, 0, 0.05);
	border-right: 2px solid rgba(0, 0, 0, 0.05);
	border-bottom: 2px solid rgba(0, 0, 0, 0.05);
	border-left: 2px solid #2CED2C;
	animation:  rotate-full 0.7s infinite linear;
	z-index: -1;
}
